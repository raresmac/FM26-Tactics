@page "/"
@using FM26_Tactics.Models
@using FM26_Tactics.Services
@inject TacticService TacticService
@inject NavigationManager NavManager

<PageTitle>FM26 Tactics Hub</PageTitle>

<div class="hero-section text-center">
    <div class="pitch-overlay"></div>
    <div class="container position-relative py-5">
        <h1 class="display-3 fw-black text-uppercase tracking-tight">FM26 <span class="text-primary-glow">Tactics Hub</span></h1>
        <p class="lead opacity-75">Master the pitch with the world's best tactical setups.</p>
    </div>
</div>

<div class="container pb-5">
    @foreach (var category in Formations.GroupBy(f => f.Category))
    {
        <div class="category-block mb-5">
            <div class="d-flex align-items-center mb-4">
                <div class="category-line"></div>
                <h3 class="mx-3 text-uppercase fw-bold letter-spacing-2">@category.Key</h3>
                <div class="category-line"></div>
            </div>
            
            <div class="row g-4">
                @foreach (var formation in category)
                {
                    // Calculate the number of tactics for this specific formation
                    var tacticCount = TacticService.GetTacticsByFormation(formation.Name).Count;

                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="formation-card" @onclick="() => NavigateToFormation(formation.Name)">
                            <div class="card-glow"></div>
                            <div class="card-content">
                                <div class="formation-badge">@formation.Category</div>
                                <h2 class="formation-title">@formation.Name</h2>
                                <p class="formation-desc">@formation.Description</p>
                                <div class="view-action">
                                    <span>Browse Tactics (@tacticCount)</span>
                                    <i class="bi bi-arrow-right-short"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private void NavigateToFormation(string name)
    {
        NavManager.NavigateTo($"/{name}");
    }

    // Keep your list of formations for the Hub here
    private List<Formation> Formations = new List<Formation>
    {
        new Formation { Name = "4-4-2", Category = "Back 4", Description = "The classic balanced system for direct football." },
        new Formation { Name = "4-3-3", Category = "Back 4", Description = "High-octane pressing and attacking width." },
        new Formation { Name = "4-2-3-1", Category = "Back 4", Description = "The modern standard for creative playmakers." },
        new Formation { Name = "3-4-3", Category = "Back 3", Description = "Aggressive wing-back play and front three pressure." },
        new Formation { Name = "3-5-2", Category = "Back 3", Description = "Total midfield dominance with two target men." },
        new Formation { Name = "5-3-2", Category = "Back 5", Description = "An impenetrable block with counter-attacking punch." },
        new Formation { Name = "4-1-2-1-2", Category = "Back 4", Description = "The narrow diamond for short passing masters." },
        new Formation { Name = "5-2-2-1", Category = "Back 5", Description = "Deep defense with two creative shadow strikers." }
    };

    public class FormationData { public string Name; public string Category; public string Description; }
}

